---
import {getCollection} from "astro:content";

import {SITE_METADATA, ITEMS_PER_PAGE} from '@/consts';
import RootLayout from "@/layouts/RootLayout.astro";
import Link from "@/components/Link.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import Tag from "@/components/Tag.astro";
import {excludeDrafts, fetchAndSortBlogPosts} from "@/functions";

export const prerender = true;

const posts = await getCollection('blog', excludeDrafts).then(fetchAndSortBlogPosts)
---

<RootLayout title={SITE_METADATA.title} description={SITE_METADATA.description}>
    <div class="relative bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
                <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewbox="0 0 100 100" preserveaspectratio="none" aria-hidden="true">
                    <polygon points="50,0 100,0 50,100 0,100"/>
                </svg>
    
                <div class="relative pt-6 px-4 sm:px-6 lg:px-8">
    
                </div>
    
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                            <span class="block xl:inline">Working to</span>
                            <span class="block text-indigo-600 xl:inline">actualize developer happiness</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            Ben is a developer relations professional with years of experience in creating inclusive and dynamic communities. His passion is to enable other developers
                            to be successful through developer experience and tooling that delights.
                        </p>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="/blog" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                                    Blog
                                </a>
                            </div>
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="/talks" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                                    Talks
                                </a>
                            </div>    
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="/projects" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                                    Projects
                                </a>
                            </div>
                        </div>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="https://github.com/sponsors/hummusonrails" target="_new" class="w-full flex items-center justify-center px-10 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-indigo-500 to-indigo-700 hover:from-indigo-600 hover:to-indigo-800 md:py-4 md:text-lg md:px-12">
