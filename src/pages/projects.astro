---
import ProjectCard from "@/components/ProjectCard.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import {SITE_METADATA} from '@/consts';

const projectsData = [
    {
        title: 'Bruriah',
        description: `Teaching Assistant Chatbot for kids`,
        github_link: 'https://github.com/hummusonrails/bruriah',
        blog_link: 'https://www.linkedin.com/posts/hummusonrails_chatgpt-ai-opensource-activity-7287733487904686080-XTVl?utm_source=social_share_sheet&utm_medium=member_desktop_web',
    },
    {
        title: 'Vector Search Workshop with Node.js',
        description: `Workshop on building a vector search engine with Node.js`,
        github_link: 'https://github.com/hummusonrails/vector-search-nodejs-workshop',
        blog_link: 'https://github.com/hummusonrails/vector-search-nodejs-workshop',
    },
    {
        title: 'Chrome extension to rate comments on blog posts',
        description: `Using vector search in browser to rate comments`,
        github_link: 'https://github.com/hummusonrails/comments-spam-analyzer',
        blog_link: 'https://dev.to/couchbase/detecting-and-analyzing-comment-quality-using-vector-search-45c4',
    },
    {
        title: 'WhatsApp Customer Agent Platform',
        description: `Automate agent searches on user inquiries from WhatsApp with vector search`,
        github_link: 'https://github.com/hummusonrails/whatsapp_support_app',
        blog_link: 'https://dev.to/couchbase/ai-in-action-enhancing-and-not-replacing-jobs-31i2',
    },
    {
        title: 'Data Anonymization Workflow with AWS',
        description: `Sanitize user data with AWS Lambda and Couchbase`,
        github_link: 'https://github.com/hummusonrails/anonymize-data-aws-couchbase-example',
        blog_link: 'https://dev.to/bengreenberg/solve-user-data-issues-in-your-app-in-about-5-minutes-19d5',
    },
    {
        title: 'Vonage Ruby SDK',
        description: `Custom built API Client`,
        github_link: 'https://github.com/vonage/vonage-ruby-sdk',
        blog_link: 'https://dev.to/vonagedev/announcing-vonage-ruby-sdk-version-7-4-0-19n1',
    },
    {
        title: 'Station',
        description: `Fully featured developer platform`,
        github_link: 'https://github.com/nexmo/station',
        blog_link: 'https://apithedocs.org/virtual/ben-greenberg',
    },
]
---

<RootLayout title={SITE_METADATA.title} description={SITE_METADATA.description}>
  <div class="retro-container">
      <pre class="ascii-divider">
/================================\
|      PROJECT DATABASE v1.0     |
\================================/
      </pre>
      
      <div class="text-center mb-8">
          <h2 class="text-3xl">EXECUTING: list_projects()</h2>
          <p class="text-terminal-dim">
              >> Accessing project database...
              <br/>> Loading entries...
          </p>
      </div>

      <div class="grid grid-cols-6 gap-4 mb-8 text-center">
          {['Ruby', 'JavaScript', 'Elixir', 'Python', 'TypeScript', 'Rust'].map(lang => (
              <div class="border border-terminal-green p-2">
                  <span class="text-terminal-bright">{lang}</span>
              </div>
          ))}
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {projectsData.map((project) => (
              <div class="border border-terminal-green p-4">
                  <h3 class="text-terminal-bright text-xl mb-2">> {project.title}</h3>
                  <p class="text-terminal-dim mb-4">{project.description}</p>
                  <div class="flex gap-4">
                      <a href={project.github_link} class="retro-link">SOURCE</a>
                      <a href={project.blog_link} class="retro-link">DOCS</a>
                  </div>
              </div>
          ))}
      </div>

      <pre class="ascii-divider mt-8">
=====================================
| END OF PROJECT LIST | STATUS: OK |
=====================================
      </pre>
  </div>
</RootLayout>