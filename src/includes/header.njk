<nav class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex">
                <div class="flex-shrink-0 flex items-center">
                    <img class="block lg:hidden h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Ben Greenberg">
                    <img class="hidden lg:block h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-logo-indigo-600-mark-gray-800-text.svg" alt="Ben Greenberg">
                </div>
                <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                    {%- for item in collections.all | eleventyNavigation -%}
                        {%- set isCurrent = (item.url == page.url) -%}
                        {%- set isParent = item.url != '/' and item.url in page.url -%}
                        <!-- Current: "border-indigo-500 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
                        <a href=
                            "{% if isCurrent %}#content{% else %}{{ item.url | url }}{% endif %}" 
                            {% if isCurrent %} aria-current="page" class="border-indigo-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
                            {% else %}
                                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1"
                            {% endif %} 
                        >
                            {{ item.title }}
                        </a>
                    {%- endfor -%}
                </div>
            </div>

        </div>
    </div>
</nav>